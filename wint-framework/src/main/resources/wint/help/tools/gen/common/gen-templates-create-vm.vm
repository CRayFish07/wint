${formCreateDefine}
<h3>create ${alias}</h3>

<form action="$doCreateAction" method="post" role="form">
    $securityUtil.tokenHtml
    #foreach($field in $fields)
    <div class="form-group row">
        <label for="${field.name}-id" class="col-sm-1 control-label">
            ${field.name}
        </label>
        <div class="col-xs-4">
            <input type="text" class="form-control" id="${field.name}-id" name="$form.${field.name}.name" value="$field.fieldValue" placeholder="Enter ${field.name}"/>
        </div>
    </div>
    $field.fieldMessage
    #end

    <button type="submit" class="btn btn-primary">Create!</button>

</form>
