$formEditDefine

<h1>$alias edit</h1>


<form action="$doUpdateAction" method="post">
    $securityUtil.tokenHtml
    <input type="hidden" name="$form.${idName}.name" value="$${alias}.id" />
    #foreach($field in $fields)
        <div>
            <label>
                ${field.name}
                <input type="text" name="$form.${field.name}.name" value="$field.fieldValue" />
            </label>
            $field.fieldMessage
        </div>
    #end

    <div>
        <input type="submit" value="save!" />
    </div>

</form>